class Solution {
public:
    int maximumSwap(int num) {
        vector<int>number;
        while(num){
            number.push_back(num%10);
            num/=10;
        }
        reverse(number.begin(),number.end());
        vector<int>rightmax_index(number.size());
        int right_max=INT_MIN;
        int max_index=0;
        for(int i=number.size()-1;i>=0;i--){
            rightmax_index[i]=max_index;
            if(number[i]>right_max){
                max_index=i;
                right_max=number[i];
            }
        }
        for(int i=0;i<rightmax_index.size()-1;i++){
            if(number[i]<number[rightmax_index[i]]){
                swap(number[i],number[rightmax_index[i]]);
                break;
            }
        }
        int ans=0;
        for(int i=0;i<number.size();i++)ans=ans*10+number[i];
        return ans;
    }
};
